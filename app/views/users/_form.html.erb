<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <%= f.label "Email:" %><br />
  <%= f.text_field :email %><br />
  <%= f.label "Password:" %><br />
  <%= f.password_field :password %><br />
  <%= f.label "Verify Password:" %><br />
  <%= f.password_field :password_confirmation %><br />
  <%= f.submit "Create User" %>
<% end %>
